<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GEOMAP_Android" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_theme</item>
        <item name="colorPrimaryVariant">@color/primary_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_theme</item>
        <item name="colorSecondaryVariant">@color/primary_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorAccent">@color/primary_theme</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_theme</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/primary_theme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_theme</item>
        <item name="colorControlActivated">@color/primary_theme</item>
        <item name="colorControlHighlight">@color/primary_theme</item>
    </style>

    <style name="WallSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/light_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ErrorText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColorHint">@color/light_black</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/primary_theme</item>
        <item name="android:textColor">@color/primary_theme</item>
        <item name="colorControlActivated">@color/primary_theme</item>
        <item name="colorControlHighlight">@color/primary_theme</item>
    </style>


    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primary_theme
        </item>
        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
    </style>

    <style name="myPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="allConstraint">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <style name="screenTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_56sdp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="screenProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:indeterminateTint">@color/primary_theme</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="screenFrameLayout" parent="@style/Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">#DCEFEFEF</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="screenButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>
</resources>