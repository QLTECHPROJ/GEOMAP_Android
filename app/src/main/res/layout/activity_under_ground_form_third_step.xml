<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg"
        tools:context=".mapReportModule.activities.UnderGroundFormThirdStepActivity">

        <ImageView
            android:id="@+id/llBack"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:contentDescription="@string/todo"
            android:padding="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_left_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center"
            android:text="@string/geological_mapping"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_56sdp"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rlCameraRoof"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_2sdp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_camera_icon"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center"
                        android:text="@string/roof"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="SpUsage" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:id="@+id/rlCameraLeft"
                            android:layout_width="@dimen/_160sdp"
                            android:layout_height="@dimen/_160sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/text_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:contentDescription="@string/todo"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_camera_icon"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_28sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/inter_semi_bold"
                                android:gravity="center"
                                android:text="@string/left"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:id="@+id/rlCameraRight"
                            android:layout_width="@dimen/_160sdp"
                            android:layout_height="@dimen/_160sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/text_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:contentDescription="@string/todo"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_camera_icon"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_28sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/inter_semi_bold"
                                android:gravity="center"
                                android:text="@string/right"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rlCameraFace"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_2sdp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_camera_icon"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center"
                        android:text="@string/face"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="SpUsage" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/enable_button"
            android:enabled="true"
            android:fontFamily="@font/inter_bold"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpUsage" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_theme"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#A6EFEFEF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>