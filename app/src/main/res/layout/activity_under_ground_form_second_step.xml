<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg"
        tools:context=".mapReportModule.activities.UnderGroundFormSecondStepActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp">

                <LinearLayout
                    android:id="@+id/llBack"
                    android:layout_width="42dp"
                    android:layout_height="@dimen/_56sdp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_arrow_left_icon"
                        app:tint="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semi_bold"
                    android:gravity="center"
                    android:text="@string/geological_mapping"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="SpUsage" />

            </RelativeLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_28sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_76sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_76sdp"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ltMapSerialNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/gray"
                            app:boxStrokeColor="@color/primary_theme"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText"
                            app:hintTextAppearance="@style/HintText"
                            app:hintTextColor="@color/primary_theme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMapSerialNo"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_38sdp"
                                android:cursorVisible="true"
                                android:fontFamily="@font/inter_semi_bold"
                                android:hint="@string/map_serial_no"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_16sdp"
                                app:hintTextAppearance="@style/HintText"
                                tools:ignore="SpUsage" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_76sdp"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ltDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/gray"
                            app:boxStrokeColor="@color/primary_theme"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText"
                            app:hintTextAppearance="@style/HintText"
                            app:hintTextColor="@color/primary_theme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_38sdp"
                                android:cursorVisible="true"
                                android:focusable="false"
                                android:fontFamily="@font/inter_semi_bold"
                                android:hint="@string/date_"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_16sdp"
                                app:hintTextAppearance="@style/HintText"
                                tools:ignore="SpUsage" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_76sdp"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ltShift"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/gray"
                            app:boxStrokeColor="@color/primary_theme"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText"
                            app:hintTextAppearance="@style/HintText"
                            app:hintTextColor="@color/primary_theme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etShift"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_38sdp"
                                android:cursorVisible="true"
                                android:fontFamily="@font/inter_semi_bold"
                                android:hint="@string/shift_"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_16sdp"
                                app:hintTextAppearance="@style/HintText"
                                tools:ignore="SpUsage" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_76sdp"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ltMappedBy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/gray"
                            app:boxStrokeColor="@color/primary_theme"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText"
                            app:hintTextAppearance="@style/HintText"
                            app:hintTextColor="@color/primary_theme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMappedBy"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_38sdp"
                                android:cursorVisible="true"
                                android:fontFamily="@font/inter_semi_bold"
                                android:hint="@string/mapped_by_"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_16sdp"
                                app:hintTextAppearance="@style/HintText"
                                tools:ignore="SpUsage" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_76sdp"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ltScale"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/gray"
                            app:boxStrokeColor="@color/primary_theme"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText"
                            app:hintTextAppearance="@style/HintText"
                            app:hintTextColor="@color/primary_theme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etScale"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_38sdp"
                                android:cursorVisible="true"
                                android:fontFamily="@font/inter_semi_bold"
                                android:hint="@string/scale_"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_16sdp"
                                app:hintTextAppearance="@style/HintText"
                                tools:ignore="SpUsage" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_76sdp"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ltLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/gray"
                            app:boxStrokeColor="@color/primary_theme"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/ErrorText"
                            app:hintTextAppearance="@style/HintText"
                            app:hintTextColor="@color/primary_theme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etLocation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_38sdp"
                                android:cursorVisible="true"
                                android:fontFamily="@font/inter_semi_bold"
                                android:hint="@string/location_"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_16sdp"
                                app:hintTextAppearance="@style/HintText"
                                tools:ignore="SpUsage" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/disable_button"
            android:enabled="false"
            android:fontFamily="@font/inter_bold"
            android:text="@string/next_step"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/primary_theme"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#A6EFEFEF"
            android:visibility="gone" />
    </RelativeLayout>
</layout>