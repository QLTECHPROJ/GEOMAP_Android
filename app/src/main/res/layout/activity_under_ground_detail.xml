<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg"
        tools:context=".mapReportModule.activities.UnderGroundDetailActivity">

        <ImageView
            android:id="@+id/llBack"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:contentDescription="@string/todo"
            android:padding="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_left_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center"
            android:text="@string/undergrounds_mapping_report_details"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_56sdp"
            android:layout_marginBottom="@dimen/_76sdp"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_8sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/map_serial_no"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvSerialNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="1253DFDSDF15235"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/date"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="14 July 2022"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/shift"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvShift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="Day Shift"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/mapped_by"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvMappedBy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="John Deo"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/scale"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvScale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="14:52 * 5223"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/location"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="Lauram ipsum , address here"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/vein_load"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvLoadName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="John Deo"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/x_coordinate"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvXCoordinate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="1253DFDSDF15235"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/y_coordinate"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvYCoordinate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="1253DFDSDF15235"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/z_coordinate"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvZCoordinate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="1253DFDSDF15235"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/attributes"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvAttributes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="John Deo"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/nos"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvNos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="John Deo"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="@string/properties"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvProperties"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:text="Lauram ipsum details here"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="SpUsage" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnViewPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/enable_button"
            android:enabled="true"
            android:fontFamily="@font/inter_bold"
            android:text="@string/view_pdf"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_theme"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#A6EFEFEF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>