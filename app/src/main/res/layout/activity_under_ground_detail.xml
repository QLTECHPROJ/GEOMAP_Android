                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="1253DFDSDF15235"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/y_coordinate"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvYCoordinate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="1253DFDSDF15235"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/z_coordinate"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvZCoordinate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="1253DFDSDF15235"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/attributes"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvAttributes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="John Deo"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/nos"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvNos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="John Deo"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/properties"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvProperties"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="Lauram ipsum details here"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/btnViewPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/enable_button"
            android:enabled="true"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/view_pdf"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/primary_theme"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#A6EFEFEF"
            android:visibility="gone" />
    </RelativeLayout>
</layout>