<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg"
        tools:context=".mapReportModule.activities.UnderGroundDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp">

                <LinearLayout
                    android:id="@+id/llBack"
                    android:layout_width="42dp"
                    android:layout_height="@dimen/_56sdp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_arrow_left_icon"
                        app:tint="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semi_bold"
                    android:gravity="center"
                    android:text="@string/undergrounds_mapping_report_details"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="SpUsage" />

            </RelativeLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_76sdp"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/map_serial_no"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvSerialNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="1253DFDSDF15235"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/date"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="14 July 2022"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/shift"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvShift"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="Day Shift"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/mapped_by"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvMappedBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="John Deo"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/scale"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvScale"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="14:52 * 5223"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/location"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="Lauram ipsum , address here"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="@string/vein_load"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvLoadName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:text="John Deo"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="SpUsage" />


                            <TextView
