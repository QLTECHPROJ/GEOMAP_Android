<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg"
        tools:context=".userModule.activities.SignInActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:src="@drawable/app_logo" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:paddingTop="@dimen/_11sdp"
                android:text="@string/hello_again"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_28sdp"
                tools:ignore="SpUsage" />


            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_34sdp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:paddingTop="@dimen/_11sdp"
                android:text="@string/wellcome_back_you_ve_been_missed"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_21sdp"
                tools:ignore="SpUsage" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_66sdp"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivUserIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_user_unfilled_icon" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ltName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/gray"
                        app:boxStrokeColor="@color/primary_theme"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText"
                        app:hintTextAppearance="@style/HintText"
                        app:hintTextColor="@color/primary_theme">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:background="@null"
                            android:backgroundTint="@color/black"
                            android:cursorVisible="true"
                            android:fontFamily="@font/inter_semi_bold"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:nextFocusDown="@id/etPassword"
                            android:singleLine="true"
                            android:textColor="@color/light_black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/_16sdp"
                            app:hintTextAppearance="@style/HintText"
                            tools:ignore="SpUsage" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_66sdp"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLock"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_password_unfilled_icon" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ltPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/gray"
                        app:boxStrokeColor="@color/primary_theme"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText"
                        app:hintTextAppearance="@style/HintText"
                        app:hintTextColor="@color/primary_theme">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:background="@null"
                            android:backgroundTint="@color/black"
                            android:cursorVisible="true"
                            android:fontFamily="@font/inter_semi_bold"
                            android:hint="@string/password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/light_black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/_16sdp"
                            app:hintTextAppearance="@style/HintText"
                            tools:ignore="SpUsage" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvForgotPswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:fontFamily="@font/inter_medium"
                android:gravity="end"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:paddingTop="@dimen/_11sdp"
                android:text="@string/forgot_password"
                android:textColor="@color/gray"
                android:textSize="@dimen/_14sdp"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/disable_button"
                android:enabled="false"
                android:textAllCaps="false"
                android:fontFamily="@font/inter_bold"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_theme"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#A6EFEFEF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>