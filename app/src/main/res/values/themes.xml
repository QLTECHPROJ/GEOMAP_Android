<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GEOMAP_Android" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_theme</item>
        <item name="colorPrimaryVariant">@color/primary_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_theme</item>
        <item name="colorSecondaryVariant">@color/primary_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorAccent">@color/primary_theme</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_theme</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/primary_theme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_theme</item>
        <item name="colorControlActivated">@color/primary_theme</item>
        <item name="colorControlHighlight">@color/primary_theme</item>
    </style>

    <style name="WallSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/light_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ErrorText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColorHint">@color/light_black</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_theme</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/primary_theme</item>
        <item name="colorControlHighlight">@color/primary_theme</item>
    </style>


    <style name="screenTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_56sdp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="screenTitle2" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="screenTitle1" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_56sdp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>


    <style name="recycleTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/_0sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="recycleSubTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/_0sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="title" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
    </style>

    <style name="subTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="subTitleHead" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="screenProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:indeterminateTint">@color/primary_theme</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="screenFrameLayout" parent="@style/Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">#DCEFEFEF</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="screenButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>
</resources>